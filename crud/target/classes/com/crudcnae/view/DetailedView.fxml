<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.crudcnae.controller.SearchController">
    <top>
        <Label text="Pesquisa e Gerenciamento de CNAEs Locais" style="-fx-font-size: 16px; -fx-padding: 10;" />
    </top>

    <center>
        <VBox spacing="10" alignment="center" style="-fx-padding: 10;">
            <HBox spacing="10" alignment="center">
                <Label text="Digite o CNAE:"/>
                <TextField fx:id="txtCnae" prefWidth="200"/>
                <Button text="Pesquisar" onAction="#onPesquisar"/>
            </HBox>

            <TableView fx:id="tableResultados" prefHeight="300" prefWidth="700">
                <columns>
                    <TableColumn fx:id="colId" text="ID IBGE" prefWidth="100"/>
                    <TableColumn fx:id="colDescricao" text="Descrição" prefWidth="600"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="center" style="-fx-padding: 10;">
            <Button text="Salvar CNAEs" onAction="#onSalvarTabela"/>
            <Button text="Editar Selecionado" onAction="#onEditarSelecionado"/>
            <Button text="Excluir Selecionados" onAction="#onExcluirSelecionados"/>
            <Button text="Voltar" onAction="#onVoltar"/>
        </HBox>
    </bottom>
</BorderPane>
