<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.crudcnae.controller.CnaeController">
    <top>
        <Label text="Consulta de Subclasses CNAE (API IBGE)" style="-fx-font-size: 18px; -fx-padding: 10;" />
    </top>

    <center>
        <TableView fx:id="tableCnaes" prefHeight="400" prefWidth="700">
            <columns>
                <TableColumn text="ID IBGE" fx:id="colId" prefWidth="100"/>
                <TableColumn text="Descrição" fx:id="colDescricao" prefWidth="600"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="10" alignment="center" style="-fx-padding: 10;">
            <Button fx:id="btnBuscar" text="Buscar CNAE" onAction="#abrirPesquisaDetalhada"/>
            <Button fx:id="btnAtualizar" text="Atualizar Lista" onAction="#buscarSubclassesAPI"/>
        </HBox>
    </bottom>
</BorderPane>
